<% if notice %>
<div class='alert alert-success col-4'>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <%= notice %>
</div>
<% end %>
<% if alert %>
<div class='alert alert-danger col-4'>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <%= alert %>
</div>
<% end %>